        },
        {
          "name": "Filtrar Tareas por Proyecto",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tasks?project_id=1",
              "host": ["{{base_url}}"],
              "path": ["tasks"],
              "query": [
                {
                  "key": "project_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Filtrar Tareas Completadas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
