              }
            ],
            "url": {
              "raw": "{{base_url}}/tasks?is_completed=true",
              "host": ["{{base_url}}"],
              "path": ["tasks"],
              "query": [
                {
                  "key": "is_completed",
                  "value": "true"
                }
